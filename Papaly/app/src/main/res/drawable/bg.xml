<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#999999"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:bottom="2.5dp" android:left="2.5dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/papaly_white"
                android:centerColor="@color/papaly_white"
                android:endColor="@color/papaly_white"
                />
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:bottom="3dp" android:left="3dp" >
        <shape>
            <solid android:color="@color/papaly_white"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>




</layer-list>